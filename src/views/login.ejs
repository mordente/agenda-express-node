<%- include('includes/head')  %>
<%- include('includes/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
            <h1 class="text-center">Entre ou cadastre-se</h1>
            <p class="text-center lead">Preencha o formulário abaixo para entrar ou se cadastrar</p>

            <%- include('includes/messages')%>

            <div class="row">
                <div class="col-6">
                    <h4>Faça seu cadastro</h4>
                    <form action="/login/cadastro" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                            <p>Se você ainda não tem uma conta, preencha o formulário para se cadastrar.</p>
                          <label>Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Senha</label>
                          <input type="password" name="password"class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Cadastrar</button>
                      </form>
                </div>

                <div class="col-6">
                    <h4>Faça seu login</h4>
                    <form action="/login/login" method="POST">
                        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                        <div class="form-group">
                            <p>Se você já tem uma conta, preencha seus dados</p>
                          <label>Email</label>
                          <input type="email" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Senha</label>
                          <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary">Entrar</button>
                    </form>



                </div>

            </div>
        </div>

        <div class="col-lg-2"></div>

    </div>
</div>

<% include('includes/footer') %> 